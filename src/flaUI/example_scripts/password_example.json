{
  "description": "Example of waiting for human input (like passwords)",
  "actions": [
    {
      "type": "start_process",
      "target": "notepad",
      "app_path": "notepad.exe",
      "description": "Launch Notepad application"
    },
    {
      "type": "wait",
      "duration": 2,
      "description": "Wait for Notepad to load"
    },
    {
      "type": "type_text",
      "text": "Username: admin",
      "delay": 0.05,
      "description": "Type username"
    },
    {
      "type": "wait",
      "prompt": "Enter your password and press Enter to continue...",
      "description": "Wait for human to enter password"
    },
    {
      "type": "type_text",
      "text": "\nPassword entered successfully!",
      "delay": 0.05,
      "description": "Confirm password was entered"
    },
    {
      "type": "wait",
      "duration": 3,
      "description": "Show the result"
    }
  ]
}
