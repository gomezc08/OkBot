{
  "description": "Open Chrome and navigate to Google",
  "actions": [
    {
      "type": "start_process",
      "target": "https://www.google.com",
      "app_path": "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe",
      "description": "Open Google in Chrome browser"
    },
    {
      "type": "wait",
      "duration": 3,
      "description": "Wait for Chrome to load and navigate to Google"
    },
    {
      "type": "set_variable",
      "name": "search_term",
      "value": "OkBot automation",
      "description": "Set the search term to look for"
    },
    {
      "type": "type_text",
      "text": "${search_term}",
      "delay": 0.05,
      "focus_app": "Google",
      "description": "Type the search term in Google search box"
    },
    {
      "type": "wait",
      "duration": 2,
      "description": "Wait to show the typed search term"
    },
    {
      "type": "click",
      "target": "Close button",
      "button": "left",
      "focus_app": "Google",
      "keyboard_shortcut": "alt+f4",
      "description": "Close Chrome using Alt+F4 keyboard shortcut"
    }
  ]
}
