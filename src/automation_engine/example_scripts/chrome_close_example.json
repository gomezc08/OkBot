{
  "description": "Chrome automation with robust close button detection",
  "actions": [
    {
      "type": "start_process",
      "target": "https://www.google.com",
      "app_path": "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe",
      "description": "Open Google in Chrome browser"
    },
    {
      "type": "wait",
      "duration": 3,
      "description": "Wait for Chrome to load and navigate to Google"
    },
    {
      "type": "set_variable",
      "name": "search_term",
      "value": "OkBot automation",
      "description": "Set the search term to look for"
    },
    {
      "type": "type_text",
      "text": "${search_term}",
      "delay": 0.05,
      "focus_app": "Google",
      "description": "Type the search term in Google search box"
    },
    {
      "type": "wait",
      "duration": 2,
      "description": "Wait to show the typed search term"
    },
    {
      "type": "click",
      "target": "Close button (strategy 1)",
      "button": "left",
      "focus_app": "Google",
      "element_selector": {
        "control_type": "Button",
        "name": "Close",
        "process_name": "chrome.exe"
      },
      "description": "Try to find close button by name and process"
    },
    {
      "type": "wait",
      "duration": 1,
      "description": "Wait to see if Chrome closed"
    },
    {
      "type": "click",
      "target": "Close button (strategy 2)",
      "button": "left",
      "focus_app": "Google",
      "element_selector": {
        "control_type": "Button",
        "process_name": "chrome.exe"
      },
      "description": "Try to find any button in Chrome and click it (fallback)"
    }
  ]
}
