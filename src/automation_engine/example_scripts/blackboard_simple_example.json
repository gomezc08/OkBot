{
  "description": "Proper Chrome automation: Open Chrome manually, handle profile selection, then navigate to Blackboard",
  "actions": [
    {
      "type": "start_process",
      "target": "chrome",
      "app_path": "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe",
      "description": "Open Chrome browser manually (not via URL)"
    },
    {
      "type": "wait",
      "duration": 3,
      "description": "Wait for Chrome to start and show profile selection"
    },
    {
      "type": "debug",
      "target": "Chrome Profile Dialog",
      "description": "Debug the Chrome profile dialog to see available UIA elements"
    },
    {
      "type": "click",
      "target": "GWU Profile Button",
      "button": "left",
      "element_selector": {
        "control_type": "Button",
        "name": "Open GWU profile"
      },
      "coordinates": [0, 0],
      "description": "Click on the GWU profile button in the profile selection dialog"
    },
    {
      "type": "wait",
      "duration": 3,
      "description": "Wait for Chrome to load with the GWU profile"
    },
    {
      "type": "detect_click",
      "target": "Bookmarks and Tabs",
      "timeout": 2,
      "continue_on_failure": true,
      "description": "Detect if user clicked on any bookmarks, tabs, or navigation elements"
    },
    {
      "type": "click",
      "target": "Address Bar",
      "button": "left",
      "element_selector": {
        "control_type": "Edit",
        "name": "Address and search bar",
        "class_name": "OmniboxViewViews"
      },
      "description": "Click the address bar using proper UIA detection"
    },
    {
      "type": "wait",
      "duration": 1,
      "description": "Wait for address bar to be focused"
    },
    {
      "type": "type_text",
      "text": "blackboard.gwu.edu",
      "delay": 0.05,
      "description": "Type the Blackboard URL in the address bar"
    },
    {
      "type": "wait",
      "duration": 1,
      "description": "Wait for URL to be entered"
    },
    {
      "type": "click",
      "target": "Navigate",
      "button": "left",
      "keyboard_shortcut": "enter",
      "description": "Press Enter to navigate to Blackboard"
    },
    {
      "type": "wait",
      "duration": 5,
      "description": "Wait for Blackboard to load"
    },
    {
      "type": "set_variable",
      "name": "status",
      "value": "Successfully navigated to Blackboard!",
      "description": "Set success status message"
    },
    {
      "type": "wait",
      "duration": 3,
      "description": "Show success message and keep browser open"
    }
  ]
}
